<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="br.com.marcosmilitao.idativosandroid.Act_Cadastro_ItensKit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_form_marginTop"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_form_marginTop">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/tv_modelo_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp"
                    android:text="Modelo Material:" />

                <android.support.v7.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/et_modelo_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Informe o Modelo"/>

                <TextView
                    android:id="@+id/tv_numserie_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp"
                    android:text="N˚ Série:" />

                <EditText
                    android:id="@+id/et_numserie_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:ems="10"
                    android:hint="Digite o Número de Série"
                    android:inputType="textCapWords"
                    android:text=""
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_patrimonio_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp"
                    android:text="Patrimônio:" />

                <EditText
                    android:id="@+id/et_patrimonio_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:ems="10"
                    android:hint="Digite o Patrimônio"
                    android:inputType="number"
                    android:text=""
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_quantidade_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp"
                    android:text="Quantidade:" />

                <EditText
                    android:id="@+id/et_quantidade_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:ems="10"
                    android:hint="Digite a Quantidade"
                    android:inputType="number"
                    android:text="1"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_datafabricacao_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp"
                    android:text="Data Fabricação:" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvsp_datafabricacao_ci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAAA-MM-DD"
                        android:layout_marginRight="5dp"

                        android:layout_marginTop="8dp"
                        android:textSize="18sp"
                        style="@android:style/Widget.DeviceDefault.Light.Spinner"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="7dp"
                        android:layout_gravity="bottom"
                        android:src="@mipmap/ic_date_range_black_24dp"
                        android:contentDescription="Image Logo" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_datavalidade_ci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="16sp"
                    android:text="Data Validade:" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvsp_validade_ci"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="AAAA-MM-DD"
                        android:layout_marginTop="8dp"
                        android:textSize="18sp"
                        style="@android:style/Widget.DeviceDefault.Light.Spinner"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="7dp"
                        android:layout_gravity="bottom"
                        android:src="@mipmap/ic_date_range_black_24dp"
                        android:contentDescription="Image Logo" />

                </LinearLayout>

            </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
