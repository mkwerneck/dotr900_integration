<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_modelo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo:"/>

            <TextView
                android:id="@+id/et_modelo_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_produto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Num Produto:"/>

            <TextView
                android:id="@+id/et_produto_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_tracenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Part Number:"/>

            <TextView
                android:id="@+id/et_tracenumber_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_numserie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Num Série:"/>

            <TextView
                android:id="@+id/et_numserie_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_patrimonio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patrimônio:"/>

            <TextView
                android:id="@+id/et_patrimonio_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_posicao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posição:"/>

            <TextView
                android:id="@+id/et_posicao_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_datavalidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Validade:"/>

            <TextView
                android:id="@+id/et_datavalidade_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/et_tagid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAGID:"/>

            <TextView
                android:id="@+id/et_tagid_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"/>

       </LinearLayout>



    </LinearLayout>

</LinearLayout>